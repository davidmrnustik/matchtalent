extends layout.pug

block title
  title #{SEO.PRECIOS.TITLE}
  meta(
    name='content'
    description=SEO.PRECIOS.DESCRIPTION
  )

block mobile-menu
  +menu-icon('mobile-menu__menu-icon')
  .inner
    ul.nav.mobile-menu__nav
      li.nav__item: a(href=URL.INICIO) #{MENU.INICIO}
      li.nav__item: a(href=URL.VENTAJAS) #{MENU.VENTAJAS}
      li.nav__item.nav__item_active: a(href=URL.PRECIOS) #{MENU.PRECIOS}
      li.nav__item: a(href=URL.PORTALES) #{MENU.PORTALES}
      li.nav__item: a(href=URL.CONTACTO) #{MENU.CONTACTO}
      li.nav__item.nav__item_highlighted: a(href='#modal-prueba-gratuita', data-modal, data-init-form) #{MENU.PRUEBA_GRATUITA}

    //- ul.nav-lang.mobile-menu__nav-lang
      li.nav-lang__item.nav-lang__item_highlighted #{LANG.ESPANOL.TEXT}
      li.nav-lang__item
        a(href=LANG.ENGLISH.URL) #{LANG.ENGLISH.TEXT}
    
    .designby.mobile-menu__designby.grid__column
      p.text_xsmall #{COMMON.DESARROLLADO_POR}:
      a(
        href='http://www.memorandum.net'
        target='_blank'
      )
        +picture('/img/logo_memorandum.svg', MEMORANDUM_MULTIMEDIA)

block content
  header.header.text_white
    .inner
      +menu-icon('header__menu-icon no-desktop')
      .logo.header__logo
        a(href=URL.INICIO)
          +picture('/img/logo_matchtalent.svg', COMMON.WEBSITE_NAME)

      ul.nav.header__nav.only-desktop
        li.nav__item: a(href=URL.VENTAJAS) #{MENU.VENTAJAS}
        li.nav__item.nav__item_active: a(href=URL.PRECIOS) #{MENU.PRECIOS}
        li.nav__item: a(href=URL.PORTALES) #{MENU.PORTALES}
        li.nav__item: a(href=URL.CONTACTO) #{MENU.CONTACTO}
        li.nav__item.nav__item_highlighted: a(href='#modal-prueba-gratuita', data-modal, data-init-form) #{MENU.PRUEBA_GRATUITA}

      //ul.nav-lang.header__nav-lang.only-desktop
        li.nav-lang__item.nav-lang__item_highlighted #{LANG.ESPANOL.TEXT}
        li.nav-lang__item: a(href=LANG.ENGLISH.URL) #{LANG.ENGLISH.TEXT}

  section.content-header.remove_margin-top.remove_margin-bottom
    .content-header__image
      +content-header-image('header_image_precios.jpg')
    .inner
      .content-header__title
        h1 #{PRECIOS.TITLE}

  section.our-plans.inner.inner_smaller.text_center
    .grid.grid_3-columns.our-plans__grid_3-columns
      .our-plans__item.grid__column
        .our-plans__header
          .our-plans__title #{PRECIOS.PROFESIONAL.TITLE}
          .our-plans__price.text_blue
            span#planProfesionalPrice(data-plan-price)
            span.our-plans__currency &euro;
            span.text_small(data-plan-period='profesionalMensual') / #{PRECIOS.MENSUAL}
            span.text_small(data-plan-period='profesionalAnual', hidden) / #{PRECIOS.ANUAL}
          fieldset.our-plans__period.text_xsmall
            input(
              type='radio',
              name='planProfesionalPeriod',
              id='profesionalMensual'
              value=PRECIOS.PROFESIONAL.PRECIO.MENSUAL
              checked
              data-period-for='planProfesionalPrice'
            )/
            label(for='profesionalMensual') #{PRECIOS.MENSUAL}
          fieldset.our-plans__period.text_xsmall
            input(
              type='radio',
              name='planProfesionalPeriod',
              id='profesionalAnual'
              value=PRECIOS.PROFESIONAL.PRECIO.ANUAL
              data-period-for='planProfesionalPrice'
            )/
            label(for='profesionalAnual') #{PRECIOS.ANUAL}
        ul.our-plans__features
          | !{PRECIOS.PROFESIONAL.PLAN}
          li: a(href='#plansInclude', data-scroll) #{PRECIOS.ALL_FEATURES}
        .our-plans__button.button.button_inverse_blue
          a(href='#modal-prueba-gratuita', data-modal, data-init-form) #{MENU.PRUEBA_GRATUITA}
      .our-plans__item.grid__column.our-plans__item_highlighted
        .our-plans__header
          .our-plans__title #{PRECIOS.EXPERTO.TITLE}
          .our-plans__price.text_blue
            span#planExpertoPrice(data-plan-price)
            span.our-plans__currency &euro;
            span.text_small(data-plan-period='expertoMensual') / #{PRECIOS.MENSUAL}
            span.text_small(data-plan-period='expertoAnual', hidden) / #{PRECIOS.ANUAL}
          fieldset.our-plans__period.text_xsmall
            input(
              type='radio',
              name='planExpertolPeriod',
              id='expertoMensual'
              value=PRECIOS.EXPERTO.PRECIO.MENSUAL
              checked
              data-period-for='planExpertoPrice'
            )/
            label(for='expertoMensual') #{PRECIOS.MENSUAL}
          fieldset.our-plans__period.text_xsmall
            input(
              type='radio',
              name='planExpertolPeriod',
              id='expertoAnual'
              value=PRECIOS.EXPERTO.PRECIO.ANUAL
              data-period-for='planExpertoPrice'
            )/
            label(for='expertoAnual') #{PRECIOS.ANUAL}
        ul.our-plans__features
          | !{PRECIOS.EXPERTO.PLAN}
          li: a(href='#plansInclude', data-scroll) #{PRECIOS.ALL_FEATURES}
        .our-plans__button.button.button_inverse_blue
          a(href='#modal-prueba-gratuita', data-modal, data-init-form) #{MENU.PRUEBA_GRATUITA}
      .our-plans__item.grid__column
        .our-plans__header
          .our-plans__title #{PRECIOS.CUSTOM.TITLE}
          .our-plans__price.text_blue: a(href='./contacto.html') #{PRECIOS.CUSTOM.CONTACTA_NOSOTROS}
        ul.our-plans__features
          | !{PRECIOS.CUSTOM.PLAN}
          li: a(href='#plansInclude', data-scroll) #{PRECIOS.ALL_FEATURES}
        .our-plans__button.button.button_inverse_blue
          a(href='#modal-prueba-gratuita', data-modal, data-init-form) #{MENU.PRUEBA_GRATUITA}

  .hr.hr_fullwidth

  section#plansInclude.plans-include.inner
    h2.plans-include__headline.text_uppercase.text_center
      | #{PRECIOS.TODOS_PLANES_INCLUYEN.TITLE}
    .grid.grid_3-columns.plans-include__grid_3-columns.grid_justify-initial
      | !{PRECIOS.TODOS_PLANES_INCLUYEN.TEXT}

  include inc/contact-with-us.pug

  section.partners.inner.text_center
    h2.partners__headline.text_center.text_uppercase
      | â€‹Portales de Empleo
    .grid.grid_flex.grid_center
      +partners(["/img/portal_buscarempleo.jpg", "/img/portal_ticjob.jpg", "/img/portal_monster.jpg", "/img/portal_infoempleo.jpg", "/img/portal_linkedinjobs.jpg", "/img/portal_xing.jpg", "/img/portal_disjob.jpg", "/img/portal_fjobs.jpg"])
    .button.partners__button
      a(href='/portales.html') ver todos portales