doctype html
html(lang="es")
  head
    title= "Precios de MatchTalent - Plataforma de empleo"
    meta(
      name='content'
      description='Plataforma de empleo integrada con diferentes portales según el perfil de profesional que busque con posibilidad de entrevistar por videoconferencia.'
    )
    include inc/head.pug

  body
    #mobileMenu.mobile-menu.text_white
      +menu-icon('mobile-menu__menu-icon')
      .inner
        ul.nav.mobile-menu__nav
          li.nav__item: a(href='./') Inicio
          li.nav__item: a(href='./ventajas.html') Ventajas
          li.nav__item.nav__item_active: a(href='./precios.html') Precios
          li.nav__item: a(href='./portales.html') ​Portales de Empleo
          li.nav__item: a(href='./contacto.html') Contacto
          li.nav__item.nav__item_highlighted: a(href='#modal-prueba-gratuita', data-modal, data-init-form) Prueba gratuita
          
        ul.nav-lang.mobile-menu__nav-lang
          li.nav-lang__item.nav-lang__item_highlighted Español
          li.nav-lang__item
            a(href='#') English
        
        .designby.mobile-menu__designby.grid__column
          p.text_xsmall Desarrollado por:
          a(
            href='http://www.memorandum.net'
            target='_blank'
          )
            +picture('/img/logo_memorandum.svg', 'Memorándum Multimedia')

    #mainContent.content
      header.header.text_white
        .inner
          +menu-icon('header__menu-icon no-desktop')
          .logo.header__logo
            a(href='./')
              +picture('/img/logo_matchtalent.svg', 'MatchTalent - Plataforma de empleo')
          ul.nav.header__nav.only-desktop
            li.nav__item: a(href='./ventajas.html') Ventajas
            li.nav__item.nav__item_active: a(href='./precios.html') Precios
            li.nav__item: a(href='./portales.html') ​Portales de Empleo
            li.nav__item: a(href='./contacto.html') Contacto
            li.nav__item.nav__item_highlighted: a(href='#modal-prueba-gratuita', data-modal, data-init-form) Prueba gratuita

          ul.nav-lang.header__nav-lang.only-desktop
            li.nav-lang__item.nav-lang__item_highlighted Español
            li.nav-lang__item: a(href='#') English

      section.content-header.remove_margin-top.remove_margin-bottom
        .content-header__image
          +content-header-image('header_image_precios.jpg')
        .inner
          .content-header__title
            h1 Nuestros planes

      section.our-plans.inner.inner_smaller.text_center
        .grid.grid_3-columns.our-plans__grid_3-columns
          .our-plans__item.grid__column
            .our-plans__header
              .our-plans__title Profesional
              .our-plans__price.text_blue
                span#planProfesionalPrice(data-plan-price)
                span.our-plans__currency &euro;
                span.text_small(data-plan-period='profesionalMensual') / mensual
                span.text_small(data-plan-period='profesionalAnual', hidden) / anual
              fieldset.our-plans__period.text_xsmall
                input(
                  type='radio',
                  name='planProfesionalPeriod',
                  id='profesionalMensual'
                  value=89
                  checked
                  data-period-for='planProfesionalPrice'
                )/
                label(for='profesionalMensual') mensual
              fieldset.our-plans__period.text_xsmall
                input(
                  type='radio',
                  name='planProfesionalPeriod',
                  id='profesionalAnual'
                  value=960
                  data-period-for='planProfesionalPrice'
                )/
                label(for='profesionalAnual') anual
            ul.our-plans__features
              li
                | <strong>5 Active Jobs</strong>
              li
                | <strong>5000 Candidates</strong>
              li Unlimited archived positions
              li Unlimited users
              li: a(href='#plansInclude', data-scroll) All features
            .our-plans__button.button.button_inverse_blue
              a(href='#modal-prueba-gratuita', data-modal, data-init-form) Prueba gratuita
          .our-plans__item.grid__column.our-plans__item_highlighted
            .our-plans__header
              .our-plans__title Experto
              .our-plans__price.text_blue
                span#planExpertoPrice(data-plan-price)
                span.our-plans__currency &euro;
                span.text_small(data-plan-period='expertoMensual') / mensual
                span.text_small(data-plan-period='expertoAnual', hidden) / anual
              fieldset.our-plans__period.text_xsmall
                input(
                  type='radio',
                  name='planExpertolPeriod',
                  id='expertoMensual'
                  value=179
                  checked
                  data-period-for='planExpertoPrice'
                )/
                label(for='expertoMensual') mensual
              fieldset.our-plans__period.text_xsmall
                input(
                  type='radio',
                  name='planExpertolPeriod',
                  id='expertoAnual'
                  value=1930
                  data-period-for='planExpertoPrice'
                )/
                label(for='expertoAnual') anual
            ul.our-plans__features
              li
                | <strong>15 Active Jobs</strong>
              li
                | <strong>15000 Candidates</strong>
              li Unlimited archived positions
              li Unlimited users
              li: a(href='#plansInclude', data-scroll) All features
            .our-plans__button.button.button_inverse_blue
              a(href='#modal-prueba-gratuita', data-modal, data-init-form) Prueba gratuita
          .our-plans__item.grid__column
            .our-plans__header
              .our-plans__title Custom
              .our-plans__price.text_blue: a(href='./contacto.html') Contacta con nosotros
            ul.our-plans__features
              li
                | <strong>Hasta 30 Active Jobs</strong>
              li
                | <strong>Hasta 30000 Candidates</strong>
              li Unlimited archived positions
              li Unlimited users
              li: a(href='#plansInclude', data-scroll) All features
            .our-plans__button.button.button_inverse_blue
              a(href='#modal-prueba-gratuita', data-modal, data-init-form) Prueba gratuita

      .hr.hr_fullwidth

      section#plansInclude.plans-include.inner
        h2.plans-include__headline.text_uppercase.text_center
          | Todos planes incluyen
        .grid.grid_3-columns.plans-include__grid_3-columns.grid_justify-initial
