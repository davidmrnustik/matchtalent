      include inc/contact-with-us.pug

      section.partners.inner.text_center
        h2.partners__headline.text_center.text_uppercase
          | ​Portales de Empleo
        .grid.grid_flex.grid_center
          +partners(["/img/portal_buscarempleo.jpg", "/img/portal_ticjob.jpg", "/img/portal_monster.jpg", "/img/portal_infoempleo.jpg", "/img/portal_linkedinjobs.jpg", "/img/portal_xing.jpg", "/img/portal_disjob.jpg", "/img/portal_fjobs.jpg"])
