extends layout.pug

block title
  title #{SEO.VENTAJAS.TITLE}
  meta(
    name='content'
    description=SEO.VENTAJAS.DESCRIPTION
  )

block mobile-menu
  +mobile-menu('ventajas')

block content
  +header('ventajas')

  section.content-header.remove_margin-top.remove_margin-bottom
    .content-header__image
      +content-header-image('header_image_ventajas.jpg')
    .inner
      .content-header__title
        h1 #{VENTAJAS.TITLE}

  section.content-text.inner.inner_smaller
    .content-text__grid_2-columns.grid.grid_2-columns.content-text__text.grid_items-center
      .grid__column
        | !{VENTAJAS.TEXT}
      .grid__column
        .content-text__cta.cta.text_center
          .cta__content.text_blue
            p
              | !{VENTAJAS.CONTACTA_CON_NOSOTROS}
            .cta__button.button.button_inverse.button_inverse_blue
              a(href='#modal-prueba-gratuita', data-modal, data-init-form) #{COMMON.SOLICITAR_DEMO}

  section.our-features
    .inner.inner_smaller
      +our-features-item(
        'dashboard',
        VENTAJAS.PANEL.TITLE,
        VENTAJAS.PANEL.DESCRIPTION
      )
      +our-features-item(
        'social-networks',
        VENTAJAS.SOCIALNETWORK.TITLE,
        VENTAJAS.SOCIALNETWORK.DESCRIPTION
      )
      +our-features-item(
        'mobile',
        VENTAJAS.MOVIL.TITLE,
        VENTAJAS.MOVIL.DESCRIPTION
      )
      +our-features-item(
        'candidate',
        VENTAJAS.CANDIDATO.TITLE,
        VENTAJAS.CANDIDATO.DESCRIPTION
      )
      +our-features-item(
        'subscriptions',
        VENTAJAS.INSCRIPCIONES.TITLE,
        VENTAJAS.INSCRIPCIONES.DESCRIPTION
      )

  include inc/contact-with-us.pug

  section.our-features
    .inner.inner_smaller
      +our-features-item(
        'unique-db',
        VENTAJAS.BASEDATOS.TITLE,
        VENTAJAS.BASEDATOS.DESCRIPTION
      )
      +our-features-item(
        'interaction',
        VENTAJAS.INTERACCION.TITLE,
        VENTAJAS.INTERACCION.DESCRIPTION
      )
      +our-features-item(
        'reports',
        VENTAJAS.INFORMES.TITLE,
        VENTAJAS.INFORMES.DESCRIPTION
      )
      +our-features-item(
        'lopd',
        VENTAJAS.LOPD.TITLE,
        VENTAJAS.LOPD.DESCRIPTION
      )
      +our-features-item(
        'video',
        VENTAJAS.VIDEO.TITLE,
        VENTAJAS.VIDEO.DESCRIPTION
      )
